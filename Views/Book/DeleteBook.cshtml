@model QL_Sach.Models.Book
@{
    ViewData["Title"] = "View Books";
}
<h2>Delete Book</h2>
<div class="container">
    <div class="row">
                <div class="col-lg-6">
                    <a href="/Book/ViewBook" class="btn btn-default col-md-2">Back to list</a>
                    @using (Html.BeginForm())
                    {
                        <input type="submit" value="Delete" class="btn btn-danger col-md2" />
                    }
                </div>
        <div class="clearfix"></div>
        <form action="CreateBook" class="col-lg-6" method="POST">
             <div class="form-group">
                <label>Id Book</label>
                <input class="form-control" value="@Model.IdBook" name="IdBook" type="text">
            </div>
            <div class="form-group">
                <label>Name Book</label>
                <input class="form-control" value="@Model.NameBook" name="NameBook" type="text">
            </div>
             <div class="form-group">
                <label>Author</label>
                <input class="form-control" value="@Model.Author"  name="Author" type="text">
            </div>
            <div class="form-group">
                <label>Num Pages</label>
                <input class="form-control"value="@Model.NumPage"  name="NumPage" type="text">
            </div>
            <div class="form-group">
                <label>Type Book</label>
                <input class="form-control" value="@Model.TypeBook"  name="TypeBook" type="text">
            </div>
               <div class="form-group">
                <label>PublishingCompany</label>
                <input class="form-control" value="@Model.PublishingCompany"  name="PublishingCompany" type="text">
            </div>
               <div class="form-group">
                <label>Price</label>
                <input class="form-control" value="@Model.Price"  name="Price" type="text">
            </div>
        </form>
    </div>
</div>